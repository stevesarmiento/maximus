{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Maximus",
  "version": "0.1.0",
  "identifier": "com.maximus.agent",
  "build": {
    "frontendDist": "../src-desktop/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:desktop",
    "beforeBuildCommand": "npm run build:desktop"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/*"],
    "copyright": "Copyright (c) 2025 Steven Sarmi",
    "category": "Finance",
    "shortDescription": "Autonomous Solana trading agent",
    "longDescription": "Maximus is an intelligent Solana agent that helps you execute faster, understands your portfolio, and provides comprehensive onchain analysis.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Maximus",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#1e1e2e"
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:default"
          ]
        }
      ]
    }
  }
}

